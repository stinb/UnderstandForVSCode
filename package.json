{
	"name": "understand",
	"displayName": "Understand",
	"description": "The Software Developer's Multi-Tool",
	"version": "1.0.0",
	"publisher": "scitools",
	"repository": {},
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Data Science",
		"Visualization"
	],
	"keywords": [
		"Understand",
		"Reference",
		"Definition",
		"Problems",
		"Analysis"
	],
	"icon": "res/logoColor.png",
	"main": "extension.js",
	"activationEvents": [
		"onLanguage:ada",
		"onLanguage:assembly",
		"onLanguage:bat",
		"onLanguage:c",
		"onLanguage:cobol",
		"onLanguage:cpp",
		"onLanguage:csharp",
		"onLanguage:css",
		"onLanguage:cuda",
		"onLanguage:delphi",
		"onLanguage:fortran",
		"onLanguage:html",
		"onLanguage:java",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:jovial",
		"onLanguage:objective-c",
		"onLanguage:objective-cpp",
		"onLanguage:pascal",
		"onLanguage:perl",
		"onLanguage:php",
		"onLanguage:python",
		"onLanguage:python",
		"onLanguage:tcl",
		"onLanguage:text",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:vb",
		"onLanguage:verilog",
		"onLanguage:vhdl",
		"onLanguage:xml"
	],
	"contributes": {
		"commands": [
			{
				"command": "understand.exploreInUnderstand.currentFile",
				"title": "Explore in Understand: Current File",
				"category": "Understand"
			},
			{
				"command": "understand.settings.showSettings",
				"title": "Settings",
				"category": "Understand"
			},
			{
				"command": "understand.settings.showSettingProjectPaths",
				"title": "Settings: Project Paths",
				"category": "Understand"
			},
			{
				"command": "understand.violations.goToNextViolationInAllFiles",
				"title": "Violations: Go to Next Violation in All Files (Error/Warning/Info)",
				"category": "Understand"
			},
			{
				"command": "understand.violations.goToNextViolationInCurrentFile",
				"title": "Violations: Go to Next Violation in Current File (Error/Warning/Info)",
				"category": "Understand"
			},
			{
				"command": "understand.violations.goToPreviousViolationInAllFiles",
				"title": "Violations: Go to Previous Violation in All Files (Error/Warning/Info)",
				"category": "Understand"
			},
			{
				"command": "understand.violations.goToPreviousViolationInCurrentFile",
				"title": "Violations: Go to Previous Violation in Current File (Error/Warning/Info)",
				"category": "Understand"
			},
			{
				"command": "understand.violations.togglePanelVisibilityAndFocus",
				"title": "Violations: Toggle Panel Visibility and Focus",
				"category": "Understand"
			}
		],
		"configuration": {
			"title": "Understand",
			"properties": {
				"understand.executable.path": {
					"type": "string",
					"default": "userver",
					"description": "Command or full path of the executable for the language server"
				},
				"understand.files.watch": {
					"type": "string",
					"default": "**/*.{C,F,F90,H,TXT,a,ada,adb,ads,asm,bat,c,cbl,cc,cgi,cob,cpl,cpp,cpy,cs,css,cu,cuh,cxx,dfm,dpr,f,f03,f77,f90,f95,fmx,for,ftn,gpr,h,hh,hpp,htm,html,hxx,inl,java,jov,js,m,mm,pas,php,pl,plm,pm,py,s,sp,sql,tcl,ts,tsx,txt,upy,v,vb,vh,vhd,vhdl,xml}",
					"markdownDescription": "[Glob pattern](https://aka.ms/vscode-glob-patterns) of files to watch, to notify the server when they are changed/created/deleted"
				},
				"understand.project.paths": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"description": "Absolute path of each Understand project (PROJECT_NAME.und folder, most likely should be configured in Workspace/Folder Settings)"
				},
				"understand.project.pathFindingMethod": {
					"type": "string",
					"default": "Automatic",
					"enum": [
						"Automatic",
						"Manual"
					],
					"description": "Either allow the language server to find the Understand project(s) automatically, or manually set it once"
				},
				"understand.protocol": {
					"type": "string",
					"default": "Local Socket",
					"enum": [
						"Local Socket",
						"TCP Socket"
					],
					"description": "Protocol to communicate with the language server"
				},
				"understand.protocols.localSocket.path": {
					"type": "string",
					"default": "",
					"description": "Path of local socket to communicate with the language server, where {uuid} is replaced with a randomly generated UUID\nDefault for Windows: \\\\.\\pipe\\userver-{uuid}\nDefault for other: /tmp/userver-{uuid}"
				},
				"understand.protocols.tcpSocket.port": {
					"type": "number",
					"default": 6789,
					"minimum": 0,
					"maximum": 65535,
					"description": "Port to communicate with the language server over TCP (integer 0 to 65535)"
				},
				"understand.trace.server": {
					"type": "string",
					"default": "Off",
					"enum": [
						"Off",
						"Messages",
						"Compact",
						"Verbose"
					],
					"description": "Log trace for communication with the language server"
				},
				"understand.violations.hover.detailedDescription": {
					"type": "boolean",
					"default": true,
					"description": "Preview the detailed description of a violation when the mouse hovers on it in the editor"
				}
			}
		}
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.8.6",
		"@types/vscode": "^1.83.0",
		"esbuild": "^0.19.2",
		"typescript": "^5.2.2"
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
	}
}
