{
	"name": "understand",
	"displayName": "Understand",
	"description": "Navigate and select strings",
	"version": "1.0.0",
	"publisher": "scitools",
	"repository": {
		"type": "git",
		"url": ""
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Keymaps",
		"Other"
	],
	"keywords": [
		"Select",
		"Move",
		"Cursor",
		"String",
		"Quote"
	],
	"icon": "icon.png",
	"activationEvents": [
        "onCommand:understand.selectDatabase",
        "onCommand:understand.seeReferencesForSelected"
	],
	"main": "extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "understand",
					"title": "Understand",
					"icon": "icon.svg"
				}
			]
		},
		"views": {
			"understand": [
				{
					"id": "understand",
					"name": "Understand"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "understand",
				"contents": "To use the Understand extension, userver should be running.\n[Connect to DB](command:understand.connectToDatabase)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "understand.hiddenAnalyzeDatabase",
					"group": "navigation"
				},
				{
					"command": "understand.hiddenConnectToDatabase"
				}
			],
			"view/item/context": [
				{
					"command": "understand.referenceChecklist.hiddenSeeFile",
					"when": "view == understand && viewItem == reference",
					"group": "inline"
				},
				{
					"command": "understand.referenceChecklist.hiddenToggleCheckmarkEntity",
					"when": "view == understand && viewItem == entity",
					"group": "inline"
				},
				{
					"command": "understand.referenceChecklist.hiddenToggleCheckmarkReference",
					"when": "view == understand && viewItem == reference",
					"group": "inline"
				}
			],
			"commandPalette": [
				{
					"command": "understand.referenceChecklist.hiddenSeeFile",
					"when": "false"
				},
				{
					"command": "understand.referenceChecklist.hiddenToggleCheckmarkEntity",
					"when": "false"
				},
				{
					"command": "understand.referenceChecklist.hiddenToggleCheckmarkReference",
					"when": "false"
				}
			],
			"editor/context": [
				{
					"command": "understand.referenceChecklist",
                    "when": "editorTextFocus"
				}
			]
		},
		"commands": [
			{
				"command": "understand.connectToDatabase",
				"title": "Understand: Database: Connect"
			},
			{
				"command": "understand.analyzeDatabase",
				"title": "Understand: Database: Analyze"
			},

			{
				"command": "understand.hiddenConnectToDatabase",
				"title": "Connect to Database",
				"icon": "$(play)"
			},
			{
				"command": "understand.hiddenAnalyzeDatabase",
				"title": "Analyze Database",
				"icon": "$(refresh)"
			},

			{
				"command": "understand.referenceChecklist",
				"title": "Understand: Reference Checklist"
			},
			{
				"command": "understand.referenceChecklist.hiddenSeeFile",
				"title": "See File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "understand.referenceChecklist.hiddenToggleCheckmarkEntity",
				"title": "Toggle Checkmark",
				"icon": "$(check-all)"
			},
			{
				"command": "understand.referenceChecklist.hiddenToggleCheckmarkReference",
				"title": "Toggle Checkmark",
				"icon": "$(check)"
			}
		]
	}
}
