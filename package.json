{
	"name": "understand",
	"displayName": "Understand",
	"description": "Navigate and select strings",
	"version": "1.0.0",
	"publisher": "scitools",
	"repository": {
		"type": "git",
		"url": ""
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Keymaps",
		"Other"
	],
	"keywords": [
		"Select",
		"Move",
		"Cursor",
		"String",
		"Quote"
	],
	"icon": "icon.png",
	"activationEvents": [
        "onCommand:understand.selectDatabase",
        "onCommand:understand.seeReferencesForSelected"
	],
	"main": "extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "understand",
					"title": "Understand",
					"icon": "icon.svg"
				}
			]
		},
		"views": {
			"understand": [
				{
					"id": "understand",
					"name": ""
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "understand",
				"contents": "To use the Understand extension, userver should be running.\n[Connect to DB](command:understand.connectToDatabase)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "understand.referenceChecklist.seeFile",
					"when": "view == understand && viewItem == reference",
					"group": "inline"
				},
				{
					"command": "understand.referenceChecklist.toggleCheckedEntity",
					"when": "view == understand && viewItem == entity",
					"group": "inline"
				},
				{
					"command": "understand.referenceChecklist.toggleCheckedReference",
					"when": "view == understand && viewItem == reference",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "understand.connectToDatabase",
				"title": "Understand: Connect to Database",
				"icon": "$(database)"
			},
			{
				"command": "understand.referenceChecklist.seeReferencesForSelected",
				"title": "Understand: Reference Checklist: See References for Selected"
			},
			{
				"command": "understand.referenceChecklist.seeFile",
				"title": "Understand: Reference Checklist: See File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "understand.referenceChecklist.toggleCheckedEntity",
				"title": "Understand: Reference Checklist: Toggle Checked Entity",
				"icon": "$(check-all)"
			},
			{
				"command": "understand.referenceChecklist.toggleCheckedReference",
				"title": "Understand: Reference Checklist: Toggle Checked Reference",
				"icon": "$(check)"
			}
		],
		"keybindings": [
			{
				"command": "understand.referenceChecklist.seeFile",
				"when": "view == understand && viewItem == reference"
			},
			{
				"command": "understand.referenceChecklist.toggleCheckedEntity",
				"when": "view == understand && viewItem == entity",
				"key": "ctrl+f"
			},
			{
				"command": "understand.referenceChecklist.toggleCheckedReference",
				"when": "view == understand && viewItem == reference"
			}
		]
	}
}
