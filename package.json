{
	"name": "understand",
	"displayName": "Understand",
	"description": "Interact with an Understand database",
	"version": "1.0.0",
	"publisher": "scitools",
	"repository": {},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Data Science",
		"Visualization"
	],
	"keywords": [
		"Reference",
		"Checklist",
		"Understand"
	],
	"icon": "logoColor.png",
	"activationEvents": [],
	"main": "extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "understand",
					"title": "Understand",
					"icon": "logoMonochrome.svg"
				}
			]
		},
		"views": {
			"understand": [
				{
					"id": "understand",
					"name": "Understand"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "understand",
				"contents": "To use the Understand extension, userver should be running.\n[Connect to DB](command:understand.connectToDatabase)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "understand.hiddenAnalyzeDatabase",
					"group": "navigation"
				},
				{
					"command": "understand.hiddenConnectToDatabase"
				}
			],
			"view/item/context": [
				{
					"command": "understand.refChecklist.hiddenRemoveEnt",
					"when": "view == understand && viewItem == ent",
					"group": "inline"
				},
				{
					"command": "understand.refChecklist.hiddenToggleCheckmarkEnt",
					"when": "view == understand && viewItem == ent",
					"group": "inline"
				},

				{
					"command": "understand.refChecklist.hiddenSeeRef",
					"when": "view == understand && viewItem == ref",
					"group": "inline"
				},
				{
					"command": "understand.refChecklist.hiddenToggleCheckmarkRef",
					"when": "view == understand && viewItem == ref",
					"group": "inline"
				}
			],
			"commandPalette": [
				{
					"command": "understand.refChecklist.hiddenRemoveEnt",
					"when": "false"
				},
				{
					"command": "understand.refChecklist.hiddenToggleCheckmarkEnt",
					"when": "false"
				},

				{
					"command": "understand.refChecklist.hiddenSeeRef",
					"when": "false"
				},
				{
					"command": "understand.refChecklist.hiddenToggleCheckmarkRef",
					"when": "false"
				}
			],
			"editor/context": [
				{
					"command": "understand.refChecklist",
                    "when": "editorTextFocus"
				}
			]
		},
		"commands": [
			{
				"command": "understand.connectToDatabase",
				"title": "Understand: Database: Connect"
			},
			{
				"command": "understand.analyzeDatabase",
				"title": "Understand: Database: Analyze"
			},



			{
				"command": "understand.hiddenConnectToDatabase",
				"title": "Connect to Database",
				"icon": "$(play)"
			},
			{
				"command": "understand.hiddenAnalyzeDatabase",
				"title": "Analyze Database",
				"icon": "$(refresh)"
			},



			{
				"command": "understand.refChecklist",
				"title": "Understand: Reference Checklist"
			},

			{
				"command": "understand.refChecklist.hiddenRemoveEnt",
				"title": "Remove Entity",
				"icon": "$(trash)"
			},
			{
				"command": "understand.refChecklist.hiddenToggleCheckmarkEnt",
				"title": "Toggle Checkmark",
				"icon": "$(check-all)"
			},

			{
				"command": "understand.refChecklist.hiddenSeeRef",
				"title": "See Reference",
				"icon": "$(go-to-file)"
			},
			{
				"command": "understand.refChecklist.hiddenToggleCheckmarkRef",
				"title": "Toggle Checkmark",
				"icon": "$(check)"
			}
		],
		"configuration": {
			"title": "Understand",
			"properties": {
				"understand.userver.host": {
					"type": "string",
					"description": "IP address or hostname of userver",
					"default": "127.0.0.1"
				},
				"understand.userver.port": {
					"type": "number",
					"description": "Port number of userver",
					"default": 8080
				},
				"understand.userver.timeout": {
					"type": "number",
					"description": "Timeout in milliseconds of userver",
					"default": 2000
				},

				"understand.db.path": {
					"type": "string",
					"description": "Full path of database (PROJECT_NAME.und folder)"
				},
				"understand.db.id": {
					"type": "string",
					"description": "ID of database (PROJECT_NAME.und/id.txt)"
				}
			}
		}
	}
}
